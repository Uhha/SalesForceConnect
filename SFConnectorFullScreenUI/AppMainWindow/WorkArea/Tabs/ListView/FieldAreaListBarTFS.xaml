<UserControl x:Class="SFConnectorFullScreenUI.FieldAreaListBarTFS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFConnectorFullScreenUI"
             mc:Ignorable="d" 
             Height="28"
             >
    <Grid Background="{StaticResource BackgroundBrush}">
        <Label VerticalAlignment="Top" Content="TFS Queue:" Foreground="{StaticResource ForegroundBrush}" FontSize="11" Margin="5,0,0,0"></Label>
        <local:QueueComboBox x:Name="queueComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="80,3,0,0" 
                  VerticalAlignment="Top" 
                  Width="250" 
                             >
        </local:QueueComboBox>
        
    </Grid>
</UserControl>
